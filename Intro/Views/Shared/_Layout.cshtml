<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - intro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/intro.styles.css" asp-append-version="true" />
   
</head>

<body>
    <a href="~/Home/Intro">Intro Page </a>
    <form>
        <label for="input1">Input 1:</label>
        <input type="number" id="input1" name="input1" />

        <label for="input2">Input 2:</label>
        <input type="number" id="input2" name="input2" />

        <label for="output">Output:</label>
        <span id="output"></span>

        <input type="submit" value="Calculate" />
    </form>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderSection("SectionName", false)
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - intro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
